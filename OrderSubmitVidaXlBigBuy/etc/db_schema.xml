    <table name="sales_order_grid">
        <column xsi:type="int" name="big_buy_order_id" unsigned="true" nullable="false"
                comment="BigBuy Order Id"/>
        <!--        VidaXl-->
        <column xsi:type="int" name="vidaXl_order_id" unsigned="true" nullable="false"
                comment=" VidaXl Order Id"/>
